<!-- Page content -->
<div class="page-content blocky">
    <div class="container">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">

            <!-- main content area -->
                <div class="mainy">
                  <!-- Page title -->
                  <!-- Page title -->
                    <div class="awidget">

                        <div class="awidget-body">

                          <% content_for :title do %><%= @user.username %>'s Settings<% end %>

                          <h1>
                            <%= gravatar_tag @user, :size => 40, :html => { :style => "float:left;margin:0 10px 20px 0;" }  %>
                            <%= @user.username %>'s Settings
                          </h1>

                          <div class="tabbable" style="clear:both;">

                          	<ul class="nav nav-tabs">
                          		<li class="active"><%= link_to 'Account', '#account', { 'data-toggle' => 'tab' } %></li>
                          		<li><%= link_to 'Picture', '#picture', { 'data-toggle' => 'tab' } %></li>
                          	</ul>

                          	<div id="account-tab-content" class="tab-content">
                          	
                          	  <!-- ================================================== 
                                   Account tab pane -->
                          		<div class="tab-pane active row" id="account">
                          		  
                                <%= form_for(resource,
                                      :as => resource_name, 
                                      :url => registration_path(resource_name),
                                      :html => { 
                                        :method => :put,
                                        :class => 'form-horizontal span8'
                                      }) do |f| %>
                                  <%= devise_error_messages! %>

                                  <div class="control-group">
                                    <%= f.label :username, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.text_field :username %>
                                    </div>
                                  </div>

                                  <div class="control-group">
                                    <%= f.label :email, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.email_field :email %>
                                    </div>
                                  </div>
                            
                                  <div class="control-group">
                                    <%= f.label :sms_address, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.email_field :sms_address %>
                                    </div>
                                  </div>

                                  <div class="control-group">
                                    <%= f.label :receive_daily_sms_reminders, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.check_box :receive_daily_sms_reminders %>
                                    </div>
                                  </div>

                                  <div class="control-group">
                                    <%= f.label :receive_email_notifications, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.check_box :receive_email_notifications %>
                                    </div>
                                  </div>


                                  <div class="control-group">
                                    <%= f.label :password, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.password_field :password %>
                                      <p class="help-block">Leave blank if you don't want to change it.</p>
                                    </div>
                                  </div>

                                  <div class="control-group">
                                    <%= f.label :password_confirmation, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.password_field :password_confirmation %>
                                    </div>
                                  </div>

                                  <br><br>

                                  <div class="control-group">
                                    <%= f.label :current_password, :class => 'control-label' %>
                                    <div class="controls">
                                      <%= f.password_field :current_password %>
                                      <p class="help-block">We need your current password to confirm your changes.</p>
                                    </div>
                                  </div>

                                  <div class="control-group">
                                    <label class="control-label">&nbsp;</label>
                                    <div class="controls">
                                      <%= f.submit "Update", :class => 'btn btn-primary' %>
                                      <%= link_to "Back", :back, :class => 'btn' %>
                                    </div>
                                  </div>
                                <% end %>
                                
                              </div> <!-- #account -->
                              
                              <!-- ================================================== 
                                   Picture tab pane -->
                          		<div class="tab-pane row" id="picture">
                          			<div class="span2" style="text-align:center">
                          				<%= gravatar_tag @user, :html => { :style => "border:1px solid #ddd;" } %>
                          			</div>
                          			<div class="span6">
                          				<p>
                          					<strong>This is your profile picture</strong>,
                          					which is a <%= link_to "Gravatar", "http://gravatar.com/" %>
                          					or Globally-Recognized Avatar.
                          				</p>
                                  <br>

                                  <%= link_to "Instructions for setting up gravatar", "../../pdf/gravatar_instructions.pdf"%>.


                          				<p>
                          					<%= link_to("http://gravatar.com/", :class => "btn btn-primary", :target => '_new') do %>
                          						Sign up to get your own Gravatar. &raquo;
                          					<% end %>
                          				</p>
                                  <br>
                                </div>
                          		</div> <!-- #picture -->
                            </div> <!-- .tab-content -->
                          </div><!-- .tabbable -->

                          <% content_for :sb do %>

                          <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
