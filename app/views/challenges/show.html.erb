<div class="row">

  <!-- main content area -->

  <div class="col-md-9">

    <div class="mainy">

      <div class="awidget">

        <div class="awidget-body">

          <!-- Dayr Top Half Details -->

          <!-- Dayr Top-Left (includes time, and dayrs)-->
          <div class="col-md-12">
            <!-- Date timer count -->
            <div class="timer hidden-xs">
              Test View
            </div>

            <!-- Challenge Title -->
            <div class="row hidden-xs hidden-sm visible-md visible-lg">
              <h1><%=@challenge.name %></h1>
            </div>
            <div class="row hidden-md hidden-lg visible-xs visible-sm">
              <h1><%=@challenge.name %></h1>
            </div>

            <div class="row">

              <!-- Challenge Information -->
              <div class="col-md-6">

                <div class="phone-img hidden-md hidden-lg visible-xs visible-sm">
                  <%= image_tag @challenge.image_url || "http://placehold.it/380x285", {:width => '100%'} %>
                  <% attribution = @challenge.image_attribution_url %>
                </div>
                <p>
                  <%= @challenge.task %>
                  <!-- Challenge Button -->
                      <a class="btn btn-large challenge-button disabled">I did this!</a>
                </p>

                <!-- People who completed this challenge -->
                
                  <h2>be the first to do this challenge!</h2>

                <hr/>
                <hr/>
              </div>

              <div class="col-md-6">
                <div class="hidden-xs hidden-sm hidden-m">
                  <%= image_tag @challenge.image_url || "http://placehold.it/380x285", {:width => '100%'} %>
                  <% attribution = @challenge.image_attribution_url %>
                </div>
              </div>
            </div>

            <!-- Dayr Top-Right (includes picture)-->

          </div>
          <div class="col-md-12">
            <p>
              <%= raw textilize @challenge.description %>
            </p>

            <br>

            <hr/>

            <section>

              <h2 id="comments_count">

                  Leave a comment...
              </h2>

            </section>

          </div>

        </div>

          </div>
        </div>
      </div> 

    </div>
    <div class="clearfix"></div>

  </div>

  <!-- End of main content area -->

  <!-- Start of side bar (right) -->

  <div class="col-md-3">
