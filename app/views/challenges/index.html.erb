

<% content_for :title do %>Challenges<% end %>

<div class="page-actions">
  <%= link_to 'New challenge', new_challenge_path, :class => 'btn btn-primary' %>
</div>
<h1>Challenges</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%=h challenge.name %></td>
    <td><%=h challenge.description %></td>
    <td><%= link_to 'Show', challenge %></td>
    <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', challenge, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
