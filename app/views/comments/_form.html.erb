<%= form_for([ commentable_object, Comment.new ], :html => { :multipart => true, :class => 'form-vertical' }) do |f| %>
  <%= f.hidden_field :parent_id, :value => parent_id  %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :commentable_id, :value => commentable_object.id %>
	<%= f.hidden_field :commentable_type, :value => commentable_object.class.name  %>
	
  <%= f.text_area :body, :rows => 3, :id=>"comment", :class => "span7", :style => "resize:none" %>
  <%= f.submit "Reply", :class => 'btn' %>
<% end %>
