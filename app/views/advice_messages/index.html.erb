<% content_for :title do %>Your Advice Messages<% end %>

<% content_for :head do %>
  <style>
    .advice_message-actions {
      display:none;
      margin-left:20px;
    }
    ul.advice_message > li {
      clear:both;
      padding:5px;
      list-style-type: none;
    }

  </style>
<% end %>



<!-- Page content -->
<div class="mainy">
  <!-- Page title -->
  <!-- Page title -->
  <div >
    <div >
      <div class="awidget">
        <div class="awidget-body">
          <!-- Dayr Top Half Details -->
          <!-- Dayr Top-Left (includes time, and dayrs)-->
          <div class="col-md-12">
            <!-- main content start-->
            
            <div class="page-actions">
              <% if user_signed_in? %>
              <%= link_to '+ New Advice Message', new_advice_message_path, :class => 'btn btn-primary', :id => 'new-assign' %> 
              <% else %>
              <%= link_to "Log in to Ask A Question!", new_user_session_path, 
                :class => "btn btn-large btn-primary",  :id => 'new-assign' %>
              <% end %>

            </div>

            <h1>Advice Messages</h1>

              <% if @advice_messages != nil && @advice_messages.length != 0%>
              <% @advice_messages.each do |advice_message| %>
              <article class="search-result row">
                <div class="col-xs-12 col-sm-12 col-md-2">
                  <a href="#" title="Lorem ipsum" class="thumbnail">
                    <%= gravatar_tag advice_message.user %>
                  </a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 excerpet">
                  <i class="glyphicon glyphicon-calendar"></i><span><%=h advice_message.created_at.strftime("%b %d, %Y") %></span>
                  <h3><%= link_to advice_message.subject, advice_message, :class => 'assignment-challenge' %></h3>
                  <p><%= truncate( advice_message.question, length:45 ) %></p> 
                </div>
                <span class="clearfix borda"></span>
              </article>                      
                <% end %>
              <% else %>

              <% end %>                            

            <!-- main content end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :sb do %>

  <div class="awidget">
    <div class="faq">
      <h2>Contact</h2>
      <ul>
        <li><a href="https://www.facebook.com/groups/toolsforteenmoms/" target="_blank">T4TM Facebook Group</a></li>
        <li><%= link_to "Ask the Advice Nurse", new_advice_message_path%></li>
        <li><a href="/about/#Contact">Site Coordinators</a></li>
      </ul>
    </div>
    <div class="share">
      <h2>Share</h2>
      <!-- Like Buttons BEGIN -->
      <div class="addthis_toolbox addthis_default_style addthis_32x32_style">
        <a class="addthis_button_preferred_1"></a>
        <a class="addthis_button_preferred_2"></a>
        <a class="addthis_button_preferred_3"></a>
        <a class="addthis_button_preferred_4"></a>
        <a class="addthis_counter addthis_bubble_style"></a>
      </div>
      <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
      <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5289d4263ec6634a"></script>
      <!-- Like Buttons END -->
    </div>
  </div>

<% end %>

