</div>

<% content_for :js do %>
<script>

/* Loops all of the questions and their respective answers
   if an answer is clicked on, then the results function will be 
   update to keep a count. */

var CHECKED;

for(var j = 1; j < 7; j++) { // loops around each question
	var  num = "q" + j;
	var q = document.getElementsByName(num); // returns all of the questions
	for (var i = 0; i < 2; i++) {
		q[i].onclick = refreshResults; // if you clicked on a answer
	}
}

function refreshResults() {
	CHECKED = 0;
	for(var j = 1; j < 7; j++) { // loops around each question
		var  num = "q" + j;
		var q = document.getElementsByName(num); // returns all of the questions
		for (var i = 1; i < 3; i++) {
			if(q[i-1].checked == false) {
				document.getElementById("q"+j+"_"+i).style.display = "none";
			} else {
				CHECKED += 1;
				document.getElementById("q"+j+"_"+i).style.display = "block";
			}
		}
	}
	if(CHECKED == 6) {
		document.getElementById("review").style.display = "block";
	} else {
		document.getElementById("review").style.display = "none";
	}
}

</script>
<% end %>

