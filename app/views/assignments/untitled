                    <p><%=h assignment.date.strftime("%b %d, %Y") %></p>

                    <% end %>
                    <% if can? :manage, Assignment %>
                    <p>
                      <%= link_to 'Edit', edit_assignment_path(assignment), :class => "btn btn-info btn-xs" %> &nbsp;
                      <%= link_to 'Destroy', assignment, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-default btn-xs"  %>
                    </p>
                    </div>
                  </div>
                </div>
                <% end %>                              
              <% end %>