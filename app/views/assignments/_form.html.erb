<%= form_for(@assignment, :html => { :class => 'form-horizontal' }) do |f| %>
	<% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
	  <%= f.label :chronic_date, "Date", :class => 'control-label' %>
	  <div class="controls">
		  <%= f.text_field :chronic_date, :class => :text %>
		  <p class="help-block">e.g., tomorrow, yesterday, Jan 1. *note, for today, type in today's date.</p>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :challenge, :class => 'control-label' %>	
	  <div class="controls">
    	<%= f.select :challenge_id, Challenge.all.collect { |c| [ c.name, c.id ] }, :class => :text %>
  	</div>
  </div>
  
	<div class="control-group">
	  <div class="controls">
	    <%= f.submit(@assignment.new_record? ? 'Create' : 'Update', :class => "btn btn-primary create-btn") %>
	  </div>
	</div>
<% end %>
